<%- include('Header.ejs') %>
<link href="/css/register.css" type="text/css" rel="stylesheet">
<script src="/javascript/script.js" type="text/javascript" charset="utf-8"></script>
<section class="vh-100">
    <div class=" heading container-fluid h-custom">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-lg-6 col-xl-5">
          <img src="/images/IMG_3510.JPG"
            class="img-fluid" alt="a market cart image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <form method="post" action="/register" id="password-form">
            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
              <p class="lead fw-normal mb-0 me-3">Register with</p>
              <button type="button" class="btn btn-primary btn-floating mx-1">
                <i class="fab fa-facebook-f"></i>
              </button>
  
              <button type="button" class="btn btn-primary btn-floating mx-1">
                <i class="fab fa-twitter"></i>
              </button>
  
              <button type="button" class="btn btn-primary btn-floating mx-1">
                <i class="fab fa-linkedin-in"></i>
              </button>
            </div>
  
            <div class="divider d-flex align-items-center my-4">
              <p class="text-center fw-bold mx-3 mb-0">Or</p>
            </div>
  
            <!-- Email input -->
            <div class="form-outline mb-4">
              <label class="form-label" for="form3Example3">Email address</label>
              <input type="email" id="form3Example3" class="form-control form-control-lg"
                placeholder="Enter a valid email address" name="username" />
              
            </div>
  
            <!-- Password input -->
            <div class="form-outline mb-3">
              <label class="form-label" for="form3Example4">Password</label>
              <input type="password" id="form3Example4 password" class="form-control form-control-lg epassword"
                placeholder="Enter password"  name="password"/>
            </div>
            <!-- Re-enter password -->
            <div class="form-outline mb-3">
              <label class="form-label" for="form3Example4">Re-enter your Password</label>
                <input type="password" id="form3Example4 confirm-password" class="form-control form-control-lg respassward"
                  placeholder="Enter password" name="repassword" />
              </div>
            <div class="d-flex justify-content-between align-items-center">
              <!-- Checkbox -->
              <div class="form-check mb-0">
                <input name="Remember me"  class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                <label class="form-check-label" for="form2Example3">
                  Remember me
                </label>
              </div>
            </div>
  
            <div class="text-center text-lg-start mt-4 pt-2">
              <button type="submit" class="btn btn-primary btn-lg this"
                style="padding-left: 2.5rem; padding-right: 2.5rem;"> Register </button>
            </div>
  
          </form>
        </div>
      </div>
    </div>
    